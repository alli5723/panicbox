<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBackground"
    android:padding="@dimen/defaultMargin"
    tools:context="com.omo_lanke.android.panicbox.RegisterActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/inputHeight"
            android:hint="Username"
            android:textColorHint="@color/defaultHintText"
            android:textColor="@color/defaultText"
            android:background="@color/transparentBg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="@dimen/defaultMargin"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/first_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/inputHeight"
            android:hint="First Name"
            android:textColorHint="@color/defaultHintText"
            android:textColor="@color/defaultText"
            android:background="@color/transparentBg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="@dimen/defaultMargin"
            android:layout_marginTop="@dimen/defaultMargin"
            app:layout_constraintTop_toBottomOf="@+id/user_name"/>

        <EditText
            android:id="@+id/last_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/inputHeight"
            android:hint="Last Name"
            android:textColorHint="@color/defaultHintText"
            android:textColor="@color/defaultText"
            android:background="@color/transparentBg"
            android:layout_marginTop="@dimen/defaultMargin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="@dimen/defaultMargin"
            app:layout_constraintTop_toBottomOf="@+id/first_name"/>

        <EditText
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_height="@dimen/inputHeight"
            android:hint="Phone"
            android:inputType="phone"
            android:textColorHint="@color/defaultHintText"
            android:textColor="@color/defaultText"
            android:background="@color/transparentBg"
            android:layout_marginTop="@dimen/defaultMargin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="@dimen/defaultMargin"
            app:layout_constraintTop_toBottomOf="@+id/last_name"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="@dimen/inputHeight"
            android:hint="Email"
            android:textColorHint="@color/defaultHintText"
            android:textColor="@color/defaultText"
            android:background="@color/transparentBg"
            android:layout_marginTop="@dimen/defaultMargin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="@dimen/defaultMargin"
            app:layout_constraintTop_toBottomOf="@+id/phone"/>

        <EditText
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="@dimen/inputHeight"
            android:hint="Address"
            android:textColorHint="@color/defaultHintText"
            android:textColor="@color/defaultText"
            android:background="@color/transparentBg"
            android:layout_marginTop="@dimen/defaultMargin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="@dimen/defaultMargin"
            app:layout_constraintTop_toBottomOf="@+id/email"/>

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/colorPrimary"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/address"/>

        <TextView
            android:id="@+id/emergency_title"
            android:layout_width="0dp"
            android:layout_height="@dimen/inputHeight"
            android:text="Emergency Contact"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/defaultText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="@dimen/defaultMargin"
            app:layout_constraintTop_toBottomOf="@+id/divider"/>

        <EditText
            android:id="@+id/emergency_first"
            android:layout_width="0dp"
            android:inputType="phone"
            android:layout_height="@dimen/inputHeight"
            android:hint="Emergency Contact Phone"
            android:textColorHint="@color/defaultHintText"
            android:textColor="@color/defaultText"
            android:background="@color/transparentBg"
            android:layout_marginTop="@dimen/defaultMargin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="@dimen/defaultMargin"
            app:layout_constraintTop_toBottomOf="@+id/emergency_title"/>

        <EditText
            android:id="@+id/emergency_last"
            android:layout_width="0dp"
            android:layout_height="@dimen/inputHeight"
            android:hint="Emergency Contact Email"
            android:textColorHint="@color/defaultHintText"
            android:textColor="@color/defaultText"
            android:background="@color/transparentBg"
            android:layout_marginTop="@dimen/defaultMargin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="@dimen/defaultMargin"
            app:layout_constraintTop_toBottomOf="@+id/emergency_first"/>

        <EditText
            android:id="@+id/emergency_phone"
            android:layout_width="0dp"
            android:inputType="phone"
            android:layout_height="@dimen/inputHeight"
            android:hint="Emergency Contact Phone"
            android:textColorHint="@color/defaultHintText"
            android:textColor="@color/defaultText"
            android:background="@color/transparentBg"
            android:layout_marginTop="@dimen/defaultMargin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="@dimen/defaultMargin"
            app:layout_constraintTop_toBottomOf="@+id/emergency_last"/>

        <EditText
            android:id="@+id/emergency_email"
            android:layout_width="0dp"
            android:layout_height="@dimen/inputHeight"
            android:hint="Emergency Contact Email"
            android:textColorHint="@color/defaultHintText"
            android:textColor="@color/defaultText"
            android:background="@color/transparentBg"
            android:layout_marginTop="@dimen/defaultMargin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="@dimen/defaultMargin"
            app:layout_constraintTop_toBottomOf="@+id/emergency_phone"/>

        <Button
            android:id="@+id/action_register"
            android:layout_width="0dp"
            android:layout_height="@dimen/inputHeight"
            android:text="Register"
            android:background="@color/colorAccent"
            android:textColor="@color/defaultText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="@dimen/defaultMargin"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/emergency_email"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
